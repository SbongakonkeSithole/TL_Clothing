@model IEnumerable<TL_Clothing.Models.ProductImage>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutLogin";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <p class="px-3">
                <a class="btn btn-primary" asp-action="Index" asp-controller="Product">Products</a>
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            IMAGE
                        </th>
                        <th>
                            PRODUCT
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="@item.ImageUrl" style="width:50px;height:50px" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Product.ProductName)
                            </td>
                            <td>
                              
                                <a asp-action="Delete" asp-route-id="@item.ImageId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

